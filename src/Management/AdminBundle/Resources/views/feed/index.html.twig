{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feeds list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Publicid</th>
                <th>Title</th>
                <th>Text</th>
                <th>Author</th>
                <th>Data</th>
                <th>Status</th>
                <th>Dateofcreation</th>
                <th>Dateofchange</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td><a href="{{ path('admin_feed_show', { 'id': feed.id }) }}">{{ feed.id }}</a></td>
                <td>{{ feed.url }}</td>
                <td>{{ feed.publicId }}</td>
                <td>{{ feed.title }}</td>
                <td>{{ feed.text }}</td>
                <td>{{ feed.author }}</td>
                <td>{% if feed.data %}{{ feed.data|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ feed.status }}</td>
                <td>{% if feed.dateOfCreation %}{{ feed.dateOfCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if feed.dateOfChange %}{{ feed.dateOfChange|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_feed_show', { 'id': feed.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_feed_edit', { 'id': feed.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_feed_new') }}">Create a new feed</a>
        </li>
    </ul>
{% endblock %}
