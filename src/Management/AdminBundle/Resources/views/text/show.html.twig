{% extends 'base.html.twig' %}

{% block body %}
    <h1>Text</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ text.id }}</td>
            </tr>
            <tr>
                <th>Dateofcreation</th>
                <td>{% if text.dateOfCreation %}{{ text.dateOfCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateofchange</th>
                <td>{% if text.dateOfChange %}{{ text.dateOfChange|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_text_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_text_edit', { 'id': text.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
