{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Компоненты платформы</h1>

    <table class="table table-striped table-staff">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Ссылка на wiki страницу</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for component in components %}
            <tr>
                <td><a href="{{ path('admin_component_show', { 'id': component.id }) }}">{{ component.id }}</a></td>
                <td>{{ component.name }}</td>
                <td>{{ component.description }}</td>
                <td>{{ component.wikiUrl }}</td>
                <td><nav><ul class="navbar">
                    <li>
                        <a href="{{ path('admin_component_show', { 'id': component.id }) }}">
                            <i class="fa fa-search fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_component_edit', { 'id': component.id }) }}">
                            <i class="fa fa-pencil fa-lg"></i>
                        </a>
                    </li>
                </ul></nav></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a class="btn" href="{{ path('admin_component_new') }}">Добавить компонент</a>#}
{% endblock %}
