{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Компонент' ~ component.name }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ component.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ component.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ component.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_component_index') }}">К списку</a>
        </li>
        <li>
            <a href="{{ path('admin_component_edit', { 'id': component.id }) }}">Редактировать</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
