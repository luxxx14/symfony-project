{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Добавление компонента</h1>

    <div class="margin-bottom-lg border-bottom">
        <div class="row">
            <div class="col-lg-5 col-md-8">
                <br><nav>
                    <ul class="navbar">
                        {% for item in locales %}
                            <li class="{{ item == locale ? 'active' : '' }}">
                                <a class="btn" href="{{ path('admin_component_translation_new', { id: component.id, locale: item.shortname }) }}">
                                    {{ item.shortname }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav><br><br>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                {#<ul class="tab">#}
                    {#{% set number = 0 %}#}
                    {#{% for form in forms %}#}
                        {#{% set number = number + 1 %}#}
                        {#<li class="{{ number == 1 ? 'active' : '' }}" id="{{ 'tab' ~ number }}">#}
                            {#{% if number == 1 %}#}
                            {#{% endif %}#}
                        {#</li>#}
                    {#{% endfor %}#}
                {#</ul>#}

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.wikiUrl) }}
                    {{ form_widget(form.wikiUrl) }}
                    {{ form_errors(form.wikiUrl) }}
                </div>

                <input class="btn" type="submit" value="Добавить" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a class="btn" href="{{ path('admin_component_translation_index', {locale: locale.shortname}) }}">К списку</a>
{% endblock %}
