{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Редактирование компонента</h1>

    <div class="margin-bottom-lg border-bottom">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <ul class="tabs">
                    {% for item in locales %}
                        <li class="{{ item == locale ? 'active' : '' }}">
                            <a href="{{ path('admin_component_translation_edit', { id: component.id, locale: item.shortname }) }}">
                                {{ item.shortname }}
                            </a>
                        </li>
                    {% endfor %}
                </ul><br>
                {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_label(edit_form.name) }}
                    {{ form_widget(edit_form.name) }}
                    {{ form_errors(edit_form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.description) }}
                    {{ form_widget(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.wikiUrl) }}
                    {{ form_widget(edit_form.wikiUrl) }}
                    {{ form_errors(edit_form.wikiUrl) }}
                </div>

                <input class="btn" type="submit" value="Сохранить" />
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <br><a class="btn" href="{{ path('admin_component_translation_index', { locale: locale.shortname }) }}">Отмена</a>
{% endblock %}
