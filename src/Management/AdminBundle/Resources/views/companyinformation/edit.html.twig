{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Редактирование информации о компании</h1>

    <div class="margin-bottom-lg border-bottom">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_label(edit_form.description) }}
                    {{ form_widget(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.address) }}
                    {{ form_widget(edit_form.address) }}
                    {{ form_errors(edit_form.address) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.email) }}
                    {{ form_widget(edit_form.email) }}
                    {{ form_errors(edit_form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.phoneNumber) }}
                    {{ form_widget(edit_form.phoneNumber) }}
                    {{ form_errors(edit_form.phoneNumber) }}
                </div>

                <input class="btn" type="submit" value="Сохранить" />
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <a class="btn" href="{{ path('admin_company_information_index') }}">Отмена</a>
{% endblock %}
