{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Source</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ source.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ source.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ source.subtitle }}</td>
            </tr>
            <tr>
                <th>Dateofcreation</th>
                <td>{% if source.dateOfCreation %}{{ source.dateOfCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateofchange</th>
                <td>{% if source.dateOfChange %}{{ source.dateOfChange|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_source_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_source_edit', { 'id': source.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
