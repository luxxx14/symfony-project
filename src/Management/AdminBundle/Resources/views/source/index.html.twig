{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Источники</h1>

    <table class="table table-striped table-staff">
        <thead>
            <tr>
                <th style="width: 8% !important;">ID</th>
                <th style="width: 20% !important;">Заголовок</th>
                <th style="width: 22% !important;">Подзаголовок</th>
                <th style="width: 40% !important;">Ссылки</th>
                <th style="width: 10% !important;">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>
                    {#<a href="{{ path('admin_source_show', { 'id': source.id }) }}">#}
                        {{ source.id }}
                    {#</a>#}
                </td>
                <td>{{ source.title }}</td>
                <td>{{ source.subtitle }}</td>
                <td>
                    {% for link in source.sourceLinks %}
                        <p><a href="{{ link.url }}" target="_blank"><i class="fa fa-link fa-lg"></i>&nbsp;</a>{{ link.name }}</p>
                        {#<p><a href="{{ link.url }}" target="_blank">{{ link.name }}</a></p>#}
                    {% endfor %}
                </td>
                <td><nav><ul class="navbar">
                    <li>
                        <a href="{{ path('admin_source_edit', { 'id': source.id }) }}">
                            <i class="fa fa-pencil fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_source_delete', { 'id': source.id }) }}">
                            <i class="fa fa-trash fa-lg"></i>
                        </a>
                    </li>
                </ul></nav></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('admin_source_new') }}">Добавить источник</a>
{% endblock %}
