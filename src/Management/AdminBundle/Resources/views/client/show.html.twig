{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Клиент' ~ client.title }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Логотип (чёрно-белый)</th>
                <td>{{ client.grayScaleImageName }}</td>
            </tr>
            <tr>
                <th>Логотип (цветной)</th>
                <td>{{ client.colorImageName }}</td>
            </tr>
            <tr>
                <th>Заголовок</th>
                <td>{{ client.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_client_index') }}">К списку</a>
        </li>
        <li>
            <a href="{{ path('admin_client_edit', { 'id': client.id }) }}">Редактировать</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
