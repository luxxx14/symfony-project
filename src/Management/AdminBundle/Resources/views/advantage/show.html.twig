{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Преимущество' ~ advantage.description }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advantage.id }}</td>
            </tr>
            <tr>
                <th>Рисунок</th>
                <td>{{ advantage.imageName }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ advantage.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_advantage_index') }}">К списку</a>
        </li>
        <li>
            <a href="{{ path('admin_advantage_edit', { 'id': advantage.id }) }}">Редактировать</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
