{% extends 'admin.html.twig' %}

{% block body %}
    <h1>{{ 'Преимущество ' ~ advantage.description }}</h1>

    <table class="table table-staff">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advantage.id }}</td>
            </tr>
            <tr>
                <th>Рисунок</th>
                <td><img src="{{ asset('uploads/images/advantage/' ~ advantage.imageName) }}"></td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ advantage.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('admin_advantage_edit', { 'id': advantage.id }) }}">Редактировать</a>

    {#{{ form_start(delete_form) }}#}
        {#<input class="btn" type="submit" value="Удалить">#}
    {#{{ form_end(delete_form) }}#}

    <a class="btn" href="{{ path('admin_advantage_index') }}">К списку</a>
{% endblock %}
