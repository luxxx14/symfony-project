{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Редактирование источника новостей</h1>

    <div class="margin-bottom-lg border-bottom">
        <div class="row">
            <div class="col-lg-5 col-md-8">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_label(edit_form.url) }}
                    {{ form_widget(edit_form.url) }}
                    {{ form_errors(edit_form.url) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.locale) }}
                    {{ form_widget(edit_form.locale) }}
                    {{ form_errors(edit_form.locale) }}
                </div>

                <input class="btn" type="submit" value="Сохранить" />
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    {#{{ form_start(delete_form) }}#}
        {#<input class="btn" type="submit" value="Удалить">#}
    {#{{ form_end(delete_form) }}#}

    <a class="btn" href="{{ path('admin_feed_source_index') }}">Отмена</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#management_adminbundle_feedsource_locale option:first-child').text("Не выбрано");
        })
    </script>
{% endblock %}
