{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Источники новостей</h1>

    <table class="table table-striped table-staff">
        <thead>
            <tr>
                <th style="width: 5% !important;">ID</th>
                <th style="width: 20% !important;">URL</th>
                <th style="width: 20% !important;">Public ID</th>
                <th style="width: 10% !important;">Заголовок</th>
                <th style="width: 25% !important;">Описание</th>
                {#<th>Последнее обновление</th>#}
                <th style="width: 10% !important;">Основной?</th>
                <th style="width: 10% !important;">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for feedSource in feedSources %}
            <tr>
                <td>
                    {#<a href="{{ path('admin_feed_source_show', { 'id': feedSource.id }) }}">#}
                        {{ feedSource.id }}
                    {#</a>#}
                </td>
                <td>{{ feedSource.url }}</td>
                <td>{{ feedSource.publicId }}</td>
                <td>{{ feedSource.title }}</td>
                <td>{{ feedSource.description }}</td>
                {#<td>{% if feedSource.lastModified %}{{ feedSource.lastModified|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td>{{ feedSource.selected ? '&#10004;'|raw : '&#10008;'|raw }}</td>
                <td><nav><ul class="navbar">
                    {#<li>#}
                        {#<a href="{{ path('admin_feed_source_show', { 'id': feedSource.id }) }}">#}
                            {#<i class="fa fa-search fa-lg"></i>#}
                        {#</a>#}
                    {#</li>#}
                    <li>
                        <a href="{{ path('admin_feed_source_edit', { 'id': feedSource.id }) }}">
                            <i class="fa fa-pencil fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_feed_source_delete', { 'id': feedSource.id }) }}">
                            <i class="fa fa-trash fa-lg"></i>
                        </a>
                    </li>
                </ul></nav></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('admin_feed_source_new') }}">Добавить источник новостей</a>
{% endblock %}
