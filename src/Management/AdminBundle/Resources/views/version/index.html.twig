{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Версии</h1>

    <table class="table table-striped table-staff">
        <thead>
            <tr>
                <th>Тип</th>
                <th>Описание</th>
                <th>Версия</th>
                <th>Maven dependency</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for version in versions %}
            <tr>
                <td>{{ version.type }}</td>
                <td>{{ version.description }}</td>
                <td>{{ version.name }}</td>
                <td>{{ version.mavenDependency|raw }}</td>
                <td><nav><ul class="navbar">
                    <li>
                        <a href="{{ path('admin_version_show', { 'id': version.id }) }}">
                            <i class="fa fa-search fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_version_edit', { 'id': version.id }) }}">
                            <i class="fa fa-pencil fa-lg"></i>
                        </a>
                    </li>
                </ul></nav></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
